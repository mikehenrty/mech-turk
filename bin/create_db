#!/usr/bin/env node
(function() {
  'use strict';

  const DB_PATH = __dirname + '/../server/lib/db/';

  const mongo = require(DB_PATH + 'mongo');
  const workers = require(DB_PATH + 'workers');
  const sentences = require(DB_PATH + 'sentences');
  const events = require(DB_PATH + 'events');

  let ff = require('ff');

  function run(cb) {
    let f = ff(() => {
      sentences.create(f());
      workers.create(f());
      events.create(f());
    });

    f.onComplete((err) => {
      if (err) {
        console.error('could not create db', err);
      } else {
        console.log('database created');
      }

      mongo.disconnect();
      if (cb) { cb(); }
    });
  }

  run(() => {
    process.exit(0);
  });
})();
